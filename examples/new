fun say_x_n_times(x: string, n: int) {
  echo(x)
  echo(n)
}

say_x_n_times("yes!", 23)

if (true() || false()) && (true() || false()) {
  echo("that is very true")
}

if find(".rs") && true() {
  files=fd(".rs") |> sed("s#src/#start/#")
  if files == "start/main.rs" {
    echo(files) |> lolcat()
  } else {
    echo("nope")
  }
}
